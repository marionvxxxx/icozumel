{
  "name": "cozumel-mobile-marketplace",
  "private": true,
  "version": "1.0.0",
  "description": "Mobile marketplace for Cozumel businesses - iOS and Android apps with admin management",
  "scripts": {
    "dev:admin": "pnpm --filter @cozumel/admin dev",
    "dev:mobile": "pnpm --filter @cozumel/mobile start",
    "mobile:web": "pnpm --filter @cozumel/mobile web",
    "mobile:ios": "pnpm --filter @cozumel/mobile ios",
    "mobile:android": "pnpm --filter @cozumel/mobile android",
    "build": "pnpm --filter @cozumel/admin build",
    "build:admin": "pnpm --filter @cozumel/admin build",
    "build:mobile": "pnpm --filter @cozumel/mobile build:android && pnpm --filter @cozumel/mobile build:ios",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules && rm -rf apps/admin/node_modules && rm -rf apps/mobile/node_modules && rm -rf packages/ui/node_modules && rm -rf packages/database/node_modules && rm -rf packages/i18n/node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "cd packages/database && npm run db:generate",
    "db:push": "cd packages/database && npm run db:push",
    "db:seed": "cd packages/database && npm run db:seed",
    "start:admin": "pnpm --filter @cozumel/admin start",
    "start:mobile": "pnpm --filter @cozumel/mobile start"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-expo": "^7.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "react-native",
    "expo",
    "ios",
    "android",
    "mobile",
    "marketplace",
    "cozumel",
    "mexico",
    "business",
    "tourism"
  ],
  "author": "Cozumel Marketplace Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=8.0.0"
  }
}